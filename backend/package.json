    "migrate": "node database/migrations.js migrate",
    "seed": "node database/migrations.js seed",
    "migrate:seed": "node database/migrations.js migrate:seed",
    "validate:env": "node -e \"require('./config/config.js'); console.log('âœ… Environment configuration is valid')\"",
    "validate:production": "node scripts/validate-production.js",
